{
  "name": "tsrpc-server",
  "version": "0.1.0",
  "main": "index.js",
  "private": true,
  "scripts": {
    "proto": "tsrpc proto -i src/shared/protocols -o src/shared/protocols/serviceProto.ts",
    "sync": "tsrpc sync --from src/shared --to ../client/src/shared",
    "api": "tsrpc api -i src/shared/protocols/serviceProto.ts -o src/api",
    "dev": "onchange \"src/**/*.ts\" -i -k -- ts-node \"src/index.ts\"",
    "test": "mocha test/**/*.test.ts",
    "build": "tsrpc build"
  },
  "devDependencies": {
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.12.2",
    "mocha": "^9.0.0",
    "onchange": "^7.1.0",
    "ts-node": "^10.0.0",
    "tsrpc-cli": "^2.0.2",
    "typescript": "^4.3.3"
  },
  "dependencies": {
    "tsrpc": "^3.0.2"
  }
}
